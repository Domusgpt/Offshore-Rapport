{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": ["warn", { "allow": ["error", "warn", "info"] }]
  },
  "globals": {
    "OffshoreRapportData": "readonly",
    "OffshoreRapportRenderer": "readonly",
    "OffshoreRapportDashboard": "readonly"
  }
}